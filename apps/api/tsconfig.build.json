{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*",
    "server/**/*",
    "../../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.spec.ts",
    "server/_core/vite.ts"
  ],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "../../",
    "skipLibCheck": true,
    "strict": false
  }
}
